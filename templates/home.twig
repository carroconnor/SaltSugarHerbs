                </div> 
            {% endif %}
        {% endfor %}
    {% endif %}

    {% endblock %}

    {# Image Gallery #}

    {% block imageGallery %}

    {% set home = craft.entries.section("home").one() %}

    {% set images = home.galleryItem.all() %}

    {% if images | length %}

        {% for item in images|batch(2) %}
            <div class="row">
            {% set index = loop.index %}
                {% for img in item %}
                    {% set query = img.galleryImage.one() %}
                    <script>
                        var index = {{ index }}
                        var resIndex = findIndex(index)
                    </script>

                    
                    {% if index == 1 %}

                    {% endif %}
                    <img class="galleryImage column" src="{{ query.getURL() }}" onclick="currentSlide(resIndex)" alt="image">
                {% endfor %}
            </div>
        {% endfor %}

    {% endif %}

    {% endblock %}

    {% block imageSlideShow %}

    {% set home = craft.entries.section("home").one() %}

    {% set images = home.galleryItem.all() %}

    {% if images | length %}

        {% for item in images %}
            <div class="gallerySlides fade">
                    {% set query = item.galleryImage.one() %}
                    <img class="slideShowImage" src="{{ query.getURL() }}" alt="image">
            </div>
        {% endfor %}

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>

    {% endif %}

    {% endblock %}

    {% block cardsFirstSet %}

    {% set home = craft.entries.section("home").one() %}

    {% set interests = home.shortInterest.all() %}

    {% if interests | length %}
        {# {% js %}
        console.log('We have interests');
        {% endjs %} #}
        {% for item in interests|slice(0, 2) %}
            {% set intName = item.interestName %}
            {% set intIcon = item.interestIcon %}
            {% set intDescription = item.interestDescription %}

            {% if loop.index == 1 %}
                <div class="card1">
                    <span class="iconStyle">
                        <i class="{{ intIcon }}"></i>
                    </span>
                    </br>
                    <strong>{{ intName }}</strong>
                    <p>{{ intDescription }}</p>
                </div>
            {% elseif loop.index == 2 %}
                <div class="card2">
                    <span class="iconStyle">
                        <i class="{{ intIcon }}"></i>
                    </span>
                    </br>
                    <strong>{{ intName }}</strong>
