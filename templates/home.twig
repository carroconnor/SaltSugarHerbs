    {% block content %}


    {% set post = craft.entries.section("blogPosts").one() %}

    <p>
    {{ post.richText|striptags|slice(0, 1000) }}
    </p>

    <div class="readMoreButton">
            <a href="{{ post.url }}" class="button">Read More &gt;</a>
    </div> 

    {% endblock %}

    {% block rightContent %}

    {% set pic = craft.entries.section("blogPosts").one() %}

    {% set post = craft.entries.section("blogPosts").one() %}

    <a href="{{ post.url }}"><img src="{{ pic.featureImage.one().url }}" alt="" width="400"></a>
    
    {% endblock %}

    {% block spotlightContent %}

    {% set posts = craft.entries.section("blogPosts").all() %}

    {% for post in posts|slice(0, 3) %}
        <div class="spotlightPost">
            <a href="{{ post.url }}"><img src="{{ post.featureImage.one().url }}" alt="" width="300"></a>
            <strong style="color:#C6AFA5;">{{ post.blogTitle }}</strong>
            <p>{{ post.foodDescription }}</p>
        </div>
    {% endfor %}

    {% endblock %}

    {% block secondRowSpotlight %}

    {% set posts = craft.entries.section("blogPosts").all() %}

